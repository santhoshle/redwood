{
  "extends": "../../tsconfig.compilerOption.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "outDir": "dist",
    "paths": {
      "src/*": ["./src/*"]
    },
    "experimentalDecorators": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
  },
  "include": [
    "src",
  ],
  "references": [
    {
      "path": "../internal"
    },
  ],
}